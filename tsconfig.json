{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2020",
        "lib": ["ES2020"],
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noEmit": true,
        "types": ["vitest/globals", "node"]
    },
    "include": [
        "**/*.ts",
        "vitest.config.ts",
        "vitest.setup.ts",
        "__tests__/**/*.ts"
    ],
    "exclude": ["node_modules", "example"]
}
